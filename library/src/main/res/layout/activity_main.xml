<?xml version="1.0" encoding="utf-8"?>
<com.billin.www.library.ui.sticker.EmojiContainerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.billin.www.library.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/preview"
        android:layout_width="200dp"
        android:background="@android:color/white"
        android:layout_gravity="right"
        android:layout_height="200dp" />

    <Button
        android:id="@+id/save_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save pic" />

    <com.billin.www.library.ui.sticker.EmojiView
        android:id="@+id/image1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        android:src="@android:color/holo_red_dark" />

    <com.billin.www.library.ui.sticker.EmojiView
        android:id="@+id/image2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        android:src="@android:color/holo_blue_dark" />

</com.billin.www.library.ui.sticker.EmojiContainerLayout>
